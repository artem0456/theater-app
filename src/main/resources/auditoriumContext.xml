<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:aop="http://www.springframework.org/schema/aop"
          xmlns:context="http://www.springframework.org/schema/context"
          xsi:schemaLocation="
				http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
				http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <value>classpath:auditoriums.properties</value>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>



    <bean id="auditoriumServiceImpl" class="com.epam.spring.core.service.impl.AuditoriumServiceImpl">
        <property name="auditoriums">
            <map>
                <entry key="${auditorium.first.name}" value-ref="auditorium_first_stage" />
                <entry key="${auditorium.second.name}" value-ref="auditorium_second_stage" />
                <entry key="${auditorium.third.name}" value-ref="auditorium_third_stage" />
            </map>
        </property>
    </bean>


    <bean id="auditorium_first_stage" class="com.epam.spring.core.domain.Auditorium">
        <property name="name" value="${auditorium.first.name}"/>
        <property name="numberOfSeats" value="${auditorium.first.numberOfSeats}"/>
        <property name="vipSeats" value = "#{'${auditorium.first.vipSeats}'.split(',')}"/>
    </bean>
    <bean id="auditorium_second_stage" class="com.epam.spring.core.domain.Auditorium">
        <property name="name" value="${auditorium.second.name}"/>
        <property name="numberOfSeats" value="${auditorium.second.numberOfSeats}"/>
        <property name="vipSeats" value = "#{'${auditorium.second.vipSeats}'.split(',')}"/>
    </bean>
    <bean id="auditorium_third_stage" class="com.epam.spring.core.domain.Auditorium">
        <property name="name" value="${auditorium.third.name}"/>
        <property name="numberOfSeats" value="${auditorium.third.numberOfSeats}"/>
        <property name="vipSeats" value = "#{'${auditorium.third.vipSeats}'.split(',')}"/>
    </bean>



</beans>