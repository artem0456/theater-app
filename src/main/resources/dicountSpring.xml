<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:aop="http://www.springframework.org/schema/aop"
          xmlns:context="http://www.springframework.org/schema/context"
          xsi:schemaLocation="
				http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
				http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd">


    <bean name="birthdayDiscountStrategyImpl"
          class="com.epam.spring.core.service.discount.impl.BirthdayDiscountStrategyImpl"/>

    <bean name="luckyDiscountStrategyImpl"
          class="com.epam.spring.core.service.discount.impl.LuckyDiscountStrategyImpl"/>


    <bean id="discountServiceImpl" class="com.epam.spring.core.service.impl.DiscountServiceImpl">
        <property name="userService" ref="userServiceImpl"/>
        <property name="discounts">
            <list>
                <bean id="birthdayDiscountStrategy"
                      class="com.epam.spring.core.service.discount.DiscountStrategy"
                      factory-method="getDiscount">
                    <constructor-arg ref="birthdayDiscountStrategyImpl"/>
                </bean>
                <bean id="happyDiscount"
                      class="com.epam.spring.core.service.discount.DiscountStrategy"
                      factory-method="getDiscount">
                    <constructor-arg ref="luckyDiscountStrategyImpl"/>
                </bean>
            </list>
        </property>
    </bean>

</beans>